@model IEnumerable<ShopCar.Model.Tintuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý tin tức</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
           URL Ảnh
        </th>
        <th>
           Nội Dung
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.URLAnh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoiDung)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaTin }) |
            @Html.ActionLink("Xem", "Details", new { id=item.MaTin }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaTin })
        </td>
    </tr>
}

</table>
