@using ShopCar.Model;
@model IEnumerable<Tintuc>


<div class="blog_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section_title title_style2">
                    <div class="title_content">
                        <h2><span>Tin mới nhất</span></h2>
                        <p>Luôn cập nhật thông tin </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="blog_container blog_column4 owl-carousel owl-loaded owl-drag">
                <div class="owl-stage-outer">
                    <div class="owl-stage" style="transform: translate3d(-1430px, 0px, 0px); transition: all 0s ease 0s; width: 4648px;">
                        @foreach (var item in Model)
                        {
                            <div class="owl-item active" style="width: 357.5px;">
                                <div class="col-lg-3">
                                    <article class="single_blog">
                                        <figure>
                                            <div class="blog_thumb">
                                                <a href="#"><img src="~/images/@item.URLAnh"  style="width:100%;height:150px" alt=""></a>
                                            </div>
                                            <figcaption class="blog_content">
                                                <h4><a href="#">@item.MaTin</a></h4>
                                                <div class="post_meta">
                                                    <p><a href="#">eCommerce</a> / 17 July</p>
                                                </div>
                                                <div class="post_desc">
                                                    <p>Condimentum blandit est sed mollitia libero pharetra aenean ...</p>
                                                </div>
                                                <footer class="post_readmore">
                                                    <a href="#">Đọc tin</a>
                                                </footer>
                                            </figcaption>
                                        </figure>
                                    </article>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="owl-nav">
                    <div class="owl-prev">
                        <i class="ion-ios-arrow-back">
                        </i>
                    </div>
                    <div class="owl-next">
                        <i class="ion-ios-arrow-forward">
                        </i>
                    </div>
                </div>
                <div class="owl-dots disabled">

                </div>
            </div>
        </div>


    </div>
</div>
