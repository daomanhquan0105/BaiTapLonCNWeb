@using CaptchaMvc.HtmlHelpers;
@using ShopCar.Model;
@model KhachHang


@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="col-9 product-price">
    <div class="register">
        <h1 style="color:black;text-align:center;">Đăng ký thành viên</h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true)
            <div class="col-md-6 register-top-grid">
                <h3>Thông tin cá nhân</h3>
                <div>
                    <span>Họ tên</span>
                    @Html.TextBoxFor(x => x.TenKH)
                </div>
                <div>
                    <span>Giới tính</span>
                    @Html.TextBoxFor(x => x.GioiTinh)
                </div>
                <div>
                    <span>Email</span>
                    @Html.TextBoxFor(x => x.Email)
                </div>
                <div>
                    <span>Số điện thoại</span>
                    @Html.TextBoxFor(x => x.SDT)
                </div>
                <div>
                    <span>Địa chỉ</span>
                    @Html.TextBoxFor(x => x.DiaChi)
                </div>
            </div>
            <div class="col-md-6 register-bottom-grid">
                <h3>Thông tin đăng nhập</h3>
                <div>
                    <span>Tài khoản</span>
                    @Html.TextBoxFor(m => m.UserName)
                </div>
                <div>
                    <span>Mật khẩu</span>
                    @Html.PasswordFor(x => x.Pass)
                </div>
                <div>
                    <span>Nhập lại mật khẩu</span>
                    @Html.Password("NhapLaiMatKhau")
                </div>
                <div>
                    <span>Mã xác nhận:</span>
                    @Html.MathCaptcha()
                </div>

                <input type="submit" value="Đăng ký" class="btn btn-success" style="font-size:25px;">
            </div>
            <div class="clearfix"> </div>
        }
        <h2 style="color:red;">@ViewBag.ThongBao</h2>
    </div>
</div>


<style>
    .register-top-grid input[type="text"],
    .register-bottom-grid input[type="password"] {
        width: 100%;
        padding: 1em;
        margin: 1em 0;
        background: none;
        outline: none;
        border-radius: 3px;
        border: 1px solid #A09F9F;
        -webkit-appearance: none;
    }

    .register-bottom-grid input[type="text"] {
        width: 100%;
        padding: 1em;
        margin: 1em 0;
        background: none;
        border-radius: 3px;
        border: 1px solid #A09F9F;
        -webkit-appearance: none;
    }
    .product-price {
        margin: 20px auto;
    }
</style>